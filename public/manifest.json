{
  "manifest_version": 3,
  "name": "Browser Tabs Manager",
  "description": "Save, search, export/import, and restore tab sessions.",
  "version": "0.1.0",
  "action": {
    "default_title": "Send tabs to manager",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": ["tabs", "storage"],
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "commands": {
    "send-tabs-to-manager": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Send current window tabs to Browser Tabs Manager"
    }
  },
  "options_page": "pages/options/index.html",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
