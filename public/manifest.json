{
  "manifest_version": 3,
  "name": "Browser Tabs Manager",
  "description": "Save, search, export/import, and restore tab sessions.",
  "version": "0.5.0",
  "action": {
    "default_title": "Browser Tabs Manager",
    "default_popup": "pages/popup/index.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "24": "icons/icon-24.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "permissions": ["tabs", "storage"],
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "commands": {
    "send-tabs-to-manager": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Send current window tabs to Browser Tabs Manager"
    }
  },
  "options_page": "pages/options/index.html",
  "icons": {
    "16": "icons/icon-16.png",
    "24": "icons/icon-24.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "64": "icons/icon-64.png",
    "96": "icons/icon-96.png",
    "128": "icons/icon-128.png",
    "256": "icons/icon-256.png",
    "512": "icons/icon-512.png"
  }
}
